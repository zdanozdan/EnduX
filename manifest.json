{
    "manifest_version": 3,
    "name": "EnduX",
    "version": "1.0",
    "icons": {
	"16": "images/icon16.png",
	"48": "images/icon48.png",
	"128": "images/icon128.png"
    },
    "permissions": [
	"activeTab",
	"storage",
	"contextMenus"
	//"https://*.*"
    ],
    "host_permissions": [
	"http://localhost/*",  // Allow interaction with localhost URLs
	"https://localhost/*",  // Allow interaction with secure localhost URLs
	"https://enduhub.com/*",  // Allow interaction enduhub endpoint
	"https://dev.enduhub.com/*"  // Allow interaction enduhub dev endpoint
    ],
    "background": {
	"service_worker": "background.js"
    },
    "content_scripts": [
	{
	    "matches": ["<all_urls>"],  // Match all URLs (you can specify a specific domain, like "https://www.google.com/*")
	    "js": ["content.js"]
	}
    ],
    "action": {
	"default_popup": "popup.html",
	"default_icon": {
	    "16": "images/icon16.png",
	    "48": "images/icon48.png",
	    "128": "images/icon128.png"
	}
    },
    "commands": {
	"copy-table": {
	    "suggested_key": {
		"default": "Ctrl+C",
		"mac": "Command+C"
	    },
	    "description": "Kopiuj tabelę"
	},
	"append-table": {
	    "suggested_key": {
		"default": "Ctrl+A",
		"mac": "Command+A"
	    },
	    "description": "Dołącz tabelę do schowka"
	}
    }
}
